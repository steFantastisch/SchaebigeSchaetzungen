<Window x:Class="SchaebigeSchaetzungen.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vms="clr-namespace:SchaebigeSchaetzungen.ViewModel" 
        xmlns:views="clr-namespace:SchaebigeSchaetzungen.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="1072" Width="1632">

    <Grid>
        <Grid.Resources>
            <DataTemplate DataType="{x:Type vms:HomescreenVM}">
                <views:Homescreen/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:RegistrationVM}">
                <views:Registration/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:GameVM}">
                <views:Game/>
            </DataTemplate>
        </Grid.Resources>
        <ContentControl Content="{Binding CurrentViewModel}"/>
    </Grid>
</Window>
