<UserControl x:Class="SchaebigeSchaetzungen.View.MultiplayerGameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SchaebigeSchaetzungen.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <WebBrowser x:Name="webBrowser1" Grid.Row="0" Grid.ColumnSpan="4" />


        <Label Content="Player 1" Grid.Row="1" Grid.Column="0"/>
        <TextBox Width="247" Margin="0,0,0,10" Grid.Row="1" Grid.Column="1"/>
        <Button Content="Submit" Grid.Column="2" Grid.Row="1" Margin="0,0,0,10" />
        <Label Content="Hints" HorizontalAlignment="Right" Margin="0,0,15,10" Grid.Row="1" Grid.Column="3" />
        <CheckBox  HorizontalAlignment="Right" Margin="0,0,0,10"  VerticalAlignment="Center" Grid.Row="1" Grid.Column="3"   />
       
        <Label Content="Player 2" Grid.Row="2" Grid.Column="0"/>
        <TextBox Width="247" Margin="0,0,0,10" Grid.Row="2" Grid.Column="1"/>
        <Button Content="Submit" Grid.Column="2" Grid.Row="2" Margin="0,0,0,10" />
    </Grid>
</UserControl>
