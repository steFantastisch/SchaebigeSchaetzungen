<Window x:Class="SchaebigeSchaetzungen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchaebigeSchaetzungen"
        mc:Ignorable="d"
        Title="Schäbige Schätzungen" Height="450" Width="800">
    <Window.DataContext>
        <local:Homescreen />
    </Window.DataContext>
    <Grid>
        <Button Content="Play" HorizontalAlignment="Left" Margin="489,313,0,0" VerticalAlignment="Top" Command="{Binding PlayCommand}"/>
        <TextBox HorizontalAlignment="Left" Height="34" Margin="129,173,0,0" TextWrapping="Wrap" Text="Spielername" VerticalAlignment="Top" Width="121" TextChanged="TextBox_TextChanged"/>
        <Button Content="Highscore" HorizontalAlignment="Left" Margin="318,313,0,0" VerticalAlignment="Top" Command="{Binding HighscoreCommand}"/>
        <Button Content="Account" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="190,313,0,0" Command="{Binding AccountCommand}"/>

    </Grid>
</Window>
